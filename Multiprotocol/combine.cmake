file(REMOVE ${COMBINE_OUTPUT}.tmp)
file(WRITE ${COMBINE_OUTPUT}.tmp "/* AUTOGENERATED */")
separate_arguments(COMBINE_FILES)
foreach(F ${COMBINE_FILES})
	file(READ "${F}" _file_contents)
	#if ("${_file_contents}" STREQUAL "")
	#	message(SEND_ERROR "File ${F} is empty or does not exist")
	#endif()
	file(APPEND "${COMBINE_OUTPUT}.tmp" "#line 0 \"${F}\"")
	file(APPEND "${COMBINE_OUTPUT}.tmp" "${_file_contents}")
endforeach()
configure_file("${COMBINE_OUTPUT}.tmp" "${COMBINE_OUTPUT}" COPYONLY)
